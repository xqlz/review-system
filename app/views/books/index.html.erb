<h1>Hello <%= session[:username] %>.</h1>
<%= link_to('Logout', logout_path, method: :delete) %>
<br/>
<br/>
<h1>List of Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Year</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.author %></td>
				<td><%= book.year %></td>
				<td><%= link_to('Details', book_path(id:book.id)) %>
				<td><%= link_to('Edit', edit_book_path(id: book.id)) %></td>
				<td><%= link_to('Delete', book_path(id: book.id), method: :delete) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
